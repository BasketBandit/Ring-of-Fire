  <property name="project.jdk.home" value="${jdk.home.9.0}"/>
  <property name="project.jdk.bin" value="${jdk.bin.9.0}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.9.0"/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module JAVA-RingOfFire -->
  
  <dirname property="module.java-ringoffire.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.java-ringoffire" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.java-ringoffire" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.java-ringoffire" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.java-ringoffire" value="-encoding UTF-8 -source 1.3 -target 1.3 ${compiler.args}"/>
  
  <property name="java-ringoffire.output.dir" value="${module.java-ringoffire.basedir}/out/production/JAVA-RingOfFire"/>
  <property name="java-ringoffire.testoutput.dir" value="${module.java-ringoffire.basedir}/out/test/JAVA-RingOfFire"/>
  
  <path id="java-ringoffire.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="java-ringoffire.module.production.classpath">
    <path refid="${module.jdk.classpath.java-ringoffire}"/>
  </path>
  
  <path id="java-ringoffire.runtime.production.module.classpath">
    <pathelement location="${java-ringoffire.output.dir}"/>
  </path>
  
  <path id="java-ringoffire.module.classpath">
    <path refid="${module.jdk.classpath.java-ringoffire}"/>
    <pathelement location="${java-ringoffire.output.dir}"/>
  </path>
  
  <path id="java-ringoffire.runtime.module.classpath">
    <pathelement location="${java-ringoffire.testoutput.dir}"/>
    <pathelement location="${java-ringoffire.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.java-ringoffire">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.java-ringoffire">
    <patternset refid="excluded.from.module.java-ringoffire"/>
  </patternset>
  
  <path id="java-ringoffire.module.sourcepath">
    <dirset dir="${module.java-ringoffire.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.java-ringoffire" depends="compile.module.java-ringoffire.production,compile.module.java-ringoffire.tests" description="Compile module JAVA-RingOfFire"/>
  
  <target name="compile.module.java-ringoffire.production" depends="register.custom.compilers" description="Compile module JAVA-RingOfFire; production classes">
    <mkdir dir="${java-ringoffire.output.dir}"/>
    <javac2 destdir="${java-ringoffire.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.java-ringoffire}/javac">
      <compilerarg line="${compiler.args.java-ringoffire}"/>
      <bootclasspath refid="java-ringoffire.module.bootclasspath"/>
      <classpath refid="java-ringoffire.module.production.classpath"/>
      <src refid="java-ringoffire.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.java-ringoffire"/>
    </javac2>
    
    <copy todir="${java-ringoffire.output.dir}">
      <fileset dir="${module.java-ringoffire.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>

  <target name="test"></target>
  
  <target name="compile.module.java-ringoffire.tests" depends="register.custom.compilers,compile.module.java-ringoffire.production" description="compile module JAVA-RingOfFire; test classes" unless="skip.tests"/>
  
  <target name="clean.module.java-ringoffire" description="cleanup module">
    <delete dir="${java-ringoffire.output.dir}"/>
    <delete dir="${java-ringoffire.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.java-ringoffire" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.java-ringoffire" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>